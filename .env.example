# Echo-Board Configuration
# IMPORTANT: This project requires Python 3.10+ and must use 'python3' command (not 'python')

# LLM Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
LLM_PROVIDER=gemini-flash
LLM_TIMEOUT=60

# Notes Configuration
# Path to your Obsidian notes directory (absolute or relative path)
NOTES_DIRECTORY=./data/obsidian_vault

# Vector Store Configuration
VECTOR_STORE_PATH=./data/chroma_db
RETRIEVAL_TOP_K=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Conversation Storage
CONVERSATION_DB_PATH=./data/conversations.db
MAX_HISTORY_SESSIONS=5

# UI Configuration
EVIDENCE_DEFAULT_COLLAPSED=true
MAX_CONVERSATION_DISPLAY=20

# Application Settings
APP_TITLE=个人董事会 - Personal Board of Directors
APP_DEBUG=false
